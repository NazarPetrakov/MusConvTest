<Window
    x:Class="AmazonMusicParser.Views.MainWindow"
    xmlns="https://github.com/avaloniaui"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:models="using:AmazonMusicParser.Models"
    xmlns:vm="using:AmazonMusicParser.ViewModels"
    Title="AmazonMusicParser"
    d:DesignHeight="450"
    d:DesignWidth="400"
    x:DataType="vm:MainWindowViewModel"
    Icon="/Assets/avalonia-logo.ico"
    mc:Ignorable="d">

    <Design.DataContext>
        <!--
            This only sets the DataContext for the previewer in an IDE,
            to set the actual DataContext for runtime, set the DataContext property in code (look at App.axaml.cs)
        -->
        <vm:MainWindowViewModel />
    </Design.DataContext>

    <Grid RowDefinitions="Auto, *">
        <TextBlock
            Grid.Row="0"
            Margin="10"
            HorizontalAlignment="Center"
            FontSize="18"
            FontWeight="Bold"
            Text="Amazon Music Scraper Results" />

        <Grid Grid.Row="1">

            <StackPanel
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                IsVisible="{Binding IsLoading}">

                <TextBlock
                    Margin="0,0,0,10"
                    FontSize="20"
                    FontWeight="SemiBold"
                    Text="Loading playlists..." />
            </StackPanel>

            <ListBox
                Background="#111"
                Foreground="White"
                IsVisible="{Binding !IsLoading}"
                ItemsSource="{Binding Playlists}">

                <ListBox.ItemTemplate>
                    <DataTemplate x:DataType="models:Playlist">
                        <StackPanel Margin="0,10,0,20" Background="#222">

                            <Grid Margin="10" ColumnDefinitions="100, *">
                                <Image
                                    Grid.Column="0"
                                    Width="80"
                                    Height="80"
                                    Margin="0,0,10,0"
                                    Source="{Binding Avatar}"
                                    Stretch="UniformToFill" />

                                <StackPanel Grid.Column="1" VerticalAlignment="Center">
                                    <TextBlock
                                        FontSize="16"
                                        FontWeight="Bold"
                                        Text="{Binding Name}" />
                                    <TextBlock
                                        Opacity="0.7"
                                        Text="{Binding Description}"
                                        TextWrapping="Wrap" />
                                </StackPanel>
                            </Grid>

                            <Separator Margin="0,5" />

                            <ItemsControl Margin="10,5" ItemsSource="{Binding Songs}">

                                <ItemsControl.ItemTemplate>
                                    <DataTemplate x:DataType="models:Song">
                                        <Grid Margin="0,2" ColumnDefinitions="3*, 2*, 3*, 1*">
                                            <TextBlock
                                                Grid.Column="0"
                                                FontWeight="SemiBold"
                                                Text="{Binding Name}"
                                                TextTrimming="CharacterEllipsis" />

                                            <TextBlock
                                                Grid.Column="1"
                                                Opacity="0.9"
                                                Text="{Binding Artist}"
                                                TextTrimming="CharacterEllipsis" />

                                            <TextBlock
                                                Grid.Column="2"
                                                Opacity="0.6"
                                                Text="{Binding Album}"
                                                TextTrimming="CharacterEllipsis" />

                                            <TextBlock
                                                Grid.Column="3"
                                                HorizontalAlignment="Right"
                                                Opacity="0.5"
                                                Text="{Binding Duration}" />
                                        </Grid>
                                    </DataTemplate>
                                </ItemsControl.ItemTemplate>
                            </ItemsControl>
                        </StackPanel>
                    </DataTemplate>
                </ListBox.ItemTemplate>
            </ListBox>

        </Grid>
    </Grid>
</Window>
